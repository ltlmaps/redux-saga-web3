{
  "name": "@statesauce/web3",
  "version": "0.2.0",
  "main": "lib/index.js",
  "dependencies": {
    "@statesauce/web3-eth-subscribe": "^0.2.0",
    "immutable": "4.0.0-rc.12",
    "redux": "^4.0.4",
    "redux-saga": "^1.0.5",
    "reselect": "^4.0.0",
    "web3": "2.0.0-alpha",
    "web3-eth": "2.0.0-alpha"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "run-when-changed": "^2.1.0"
  },
  "scripts": {
    "build": "babel src/ --out-dir lib/",
    "clean": "rimraf lib/",
    "dev": "run-when-changed --watch 'src/**/*.js' --exec 'npm run prepare'",
    "prepare": "npm run clean && npm run build",
    "prettier": "prettier --write \"src/**/*.js\"",
    "link-deps": "npm link @statesauce/web3-eth-subscribe"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
